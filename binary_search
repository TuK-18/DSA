int binary_search (int a[], int n, int x){
    int left = 0;
    int right = n-1;

    while(left < right){
        
        int mid = (left + right) / 2;

        if(x == a[mid]) return mid;
        else if(x > a[mid]) left = mid+1;
        else if(x < a[mid]) right = mid-1;
    }

    return -1;
}
